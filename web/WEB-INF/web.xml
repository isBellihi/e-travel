<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>router</filter-name>
        <filter-class>web.Controlleur.Router</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>router</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>CreateServlet</servlet-name>
        <servlet-class>web.Controlleur.CreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>web.Controlleur.VoyageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>web.Controlleur.auth.ServletSignup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>web.Controlleur.auth.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>web.Controlleur.auth.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>new excursion</servlet-name>
        <servlet-class>web.Controlleur.CreateExcurssionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>new excursion</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reserver une excurssion</servlet-name>
        <servlet-class>web.Controlleur.ReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reserver une excurssion</servlet-name>
        <url-pattern>/reservation/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JSON Excursion</servlet-name>
        <servlet-class>web.Controlleur.JSONExcursion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JSON Excursion</servlet-name>
        <url-pattern>/excursions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>all Excursion</servlet-name>
        <servlet-class>web.Controlleur.AllExcursions</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>all Excursion</servlet-name>
        <url-pattern>/all</url-pattern>
    </servlet-mapping>


</web-app>